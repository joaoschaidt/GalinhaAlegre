<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/_3sdp" android:top="@dimen/_3sdp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle"
                    >

                    <solid android:color="#0497a3"/>
                    <!--quando Ã© gradient tem end color-->
                    <stroke android:width="@dimen/_5sdp"
                        android:color="#ffffff" />
                    <!--
                   android:radius="20dp"
                    -->

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/_3sdp" android:top="@dimen/_3sdp">
                <shape>
                    <solid android:color="#45000000" />

                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/_3sdp" android:right="@dimen/_3sdp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle"
                    >

                    <solid android:color="#0497a3"/>

                    <stroke android:width="@dimen/_5sdp"
                        android:color="#ffffff" />


                </shape>
            </item>
        </layer-list>
    </item>
</selector>