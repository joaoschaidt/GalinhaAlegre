<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutInstruction"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_instruction"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_20sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Boa Sorte!"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="@dimen/_29sdp"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jogar"
        android:id="@+id/jogar"
        android:textAlignment="center"
        android:textSize="@dimen/_35sdp"
        android:textStyle="bold"
        android:textColor="@color/button7"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"


        />

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/voltar"
        android:background="@null"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_keyboard_arrow_left_white_48dp"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/jogar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

</RelativeLayout>