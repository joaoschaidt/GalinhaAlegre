<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>

    <RelativeLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pontos:"
            android:id="@+id/score"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="63dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/maxscore"
            android:layout_alignStart="@+id/maxscore" />

        <ImageButton
            android:layout_width="@dimen/_17sdp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@null"
            android:scaleY="2"
            android:scaleX="2"
            android:src="@drawable/ic_thumbs_up_down_white_48dp"

            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/home"
            android:layout_alignLeft="@+id/maxscore"
            android:layout_alignStart="@+id/maxscore"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="                              "
            android:id="@+id/maxscore"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_27sdp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="@dimen/_23sdp"
            android:layout_below="@+id/score"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:id="@+id/Restart"
            android:src="@drawable/ic_autorenew_white_48dp"
            android:background="@null"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"


            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/maxscore"
            android:layout_alignEnd="@+id/maxscore" />

        <ImageButton
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:src="@drawable/ic_home_white_48dp"
            android:background="@null"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_alignTop="@+id/Restart"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>


</RelativeLayout>